<div
  class="container d-flex flex-column justify-content-center align-items-center"
>
  <h2>Add New Wine</h2>

  <form action="/wines" method="POST" class="mt-4 d-flex flex-column">
    <div class="form-group row">
      <label for="title" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-20">
        <input
          type="text"
          class="form-control"
          id="title"
          placeholder=""
          name="wine[title]"
        />
      </div>
    </div>

    <div class="form-group row">
      <label for="location" class="col-sm-2 col-form-label">Location</label>
      <div class="col-sm-20">
        <input
          type="text"
          class="form-control"
          id="location"
          placeholder=""
          name="wine[location]"
        />
      </div>
    </div>

    <div class="form-group row">
      <label for="image" class="col-sm-5 col-form-label">Image URL</label>
      <div class="col-sm-20">
        <input
          type="text"
          class="form-control"
          id="image"
          placeholder=""
          name="wine[image]"
        />
      </div>
    </div>

    <div class="form-group row">
      <label for="image" class="col-sm-5 col-form-label">Description</label>
      <div class="col-sm-20">
        <input
          type="text"
          class="form-control"
          id="description"
          placeholder=""
          name="wine[description]"
        />
      </div>
    </div>

    <div class="input-group mb-3 mt-1 d-flex flex-column">
      <div>
        <label for="price" class="col-sm-2 col-form-label">Price</label>
      </div>
      <div class="d-flex">
        <span class="input-group-text">$</span>
        <input
          type="text"
          id="price-label"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
          name="wine[price]"
        />
      </div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Add</button>
        <a href="/wines" class="btn btn-primary">Back</a>
      </div>
    </div>
  </form>
</div>
